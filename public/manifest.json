{
  "manifest_version": 3,
  "name": "Arete",
  "version": "0.1",
  "description": "Connect selected text to ChatGPT, Claude & Perplexity instantly. No copy-paste needed - just select and go.",
  "content_scripts": [
    {
      "js": ["/content_script.js"],
      "matches": ["https://*/*", "https://*/"]
    }
  ],
  "permissions": ["contextMenus"],
  "background": {
    "service_worker": "/worker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*.png", "assets/*.svg", "assets/*.js"],
      "matches": ["https://*/*", "file://*/*"],
      "html": ["/settings.html"]
    }
  ]
}
