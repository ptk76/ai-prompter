{
  "manifest_version": 3,
  "name": "Arete",
  "version": "0.2",
  "description": "Select text to instantly prompt ChatGPT/Perplexity, search with your favorite engine, or copy - all with one click.",
  "content_scripts": [
    {
      "js": ["/content_script.js"],
      "matches": ["https://*/*", "https://*/"]
    }
  ],
  "permissions": ["tabs", "storage", "scripting"],
  "background": {
    "service_worker": "/worker.js",
    "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["assets/*.png", "assets/*.svg", "assets/*.js"],
      "matches": ["https://*/*", "file://*/*"],
      "html": ["/settings.html"]
    }
  ],
  "action": {},
  "icons": {
    "128": "arete.png"
  }
}
